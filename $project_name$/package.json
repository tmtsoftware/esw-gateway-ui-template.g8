{
  "name": "$project_name$",
  "author": "$author_name$",
  "version": "$version$",
  "license": "Apache License, Version 2.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "@tmtsoftware/esw-ts": "^0.1.0-M1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "scripts": {
    "start": "snowpack dev",
    "build": "snowpack build",
    "clean": "rm -rf dist && mkdir dist",
    "prebuild": "npm-run-all --parallel clean fix",
    "test": "web-test-runner 'test/**/*.test.{ts,tsx}'",
    "fix": "npm-run-all --parallel clean fix:eslint fix:prettier",
    "fix:eslint": "eslint --fix --config .eslintrc.js './**/*.{ts,tsx}'",
    "fix:prettier": "prettier --write --config ./.prettierrc './**/*.{ts,tsx}' "
  },
  "browserslist": [
    "last 1 chrome version"
  ],
  "devDependencies": {
    "@snowpack/plugin-typescript": "^1.2.1",
    "@snowpack/web-test-runner-plugin": "^0.2.2",
    "@testing-library/react": "^11.2.7",
    "@types/chai": "^4.2.18",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "@web/test-runner": "^0.13.7",
    "chai": "^4.3.4",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "snowpack": "^3.5.6",
    "typescript": "^4.3.2"
  }
}
